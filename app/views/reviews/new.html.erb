<div class="container">
  <div class="row justify-content-md-center mt-5">
    <div class="col-6">
      <h1>New Review</h1>

      <%= simple_form_for @review, url: @review do |f| %>
        <div>
          <%= f.input :title, class: 'form-control mb-4' %>
        </div>

        <div>
          <%= f.input :content, :as => :text, :input_html => {:rows => 7}, class: "form-control" %>
        </div>

        <div>
          <%= f.button :submit, class: 'btn btn-primary mt-4' %>
        </div>
      <% end %>
    </div>
  </div>
</div>