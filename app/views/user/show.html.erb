<div class="container text-center mt-5">
  <div class="row justify-content-md-center">
    <div class="col-7">
      <h1><%= fa_icon('ring spin') %><%= @user.email %></h1>
      <h2>Reviews</h2>
    </div>
    <table class="table">
      <thead>
      <tr align="center">
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @urev.each do |rev| %>
        <tr>
          <td align="center"><%= rev.title %></td>
          <td align="center"><%= rev.content %></td>
          <td ><%= link_to 'Show', rev %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>